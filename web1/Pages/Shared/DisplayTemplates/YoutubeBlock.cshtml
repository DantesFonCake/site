@model web1.Models.Blocks.YoutubeBlock
@if(!string.IsNullOrEmpty(Model.VideoId)){
    <div class="embed-responsive embed-responsive-16by9 col-xs-12 text-center">
        <iframe class="yt-block" width="560" height="315" src="https://www.youtube.com/embed/@Model.VideoId?enablejsapi=1" title="YouTube video player" frameborder="0" allowscriptaccess="always" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    }