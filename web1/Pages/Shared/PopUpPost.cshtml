@model SinglePost<StandardPost>
    <div class="modal fade">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header" id="popup-modal-header">
                    <h3>@Model.Data.Title</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="popup-modal-body">
                    @foreach (var block in Model.Data.Blocks)
                    {
                        <div class="block @block.CssName()">
                            <div class="container">
                                @Html.DisplayFor(m => block, $"{block.GetType().Name}")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>