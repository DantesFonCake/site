@model SinglePost<StandardPost>
                <div class="modal-body text-center" id="popup-modal-body">
                    <img id="top-point" src="~/assets/statics/img/point.png">
                    <img id="bottom-point" src="~/assets/statics/img/point.png">
                    <div class="true-content">
                    <h3>@Model.Data.Title</h3>
                    @foreach (var block in Model.Data.Blocks)
                    {
                        <div class="block @block.CssName()">
                            <div class="container">
                                @Html.DisplayFor(m => block, $"{block.GetType().Name}")
                            </div>
                        </div>
                    }
                    </div>
                </div>
        